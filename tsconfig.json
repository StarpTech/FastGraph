{
  "compilerOptions": {
    "outDir": "build",
    "module": "commonjs",
    "target": "esnext",
    "lib": ["esnext", "webworker"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "types": ["@cloudflare/workers-types", "node"]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": ["node_modules/", "dist/"]
}
